%div.row
  %div.eight.columns
    %h2
      Find or ask a question
    %div.row.collapse
      %form{ "data-remote" => "true", :action => "/search", :id => "ajax-search-form" }
        %div.twelve.mobile-four.columns
          %input#search{ :type => "text", :name => "query" }
    %ul#questions-autocomplete
  - if user_signed_in?
    %div.four.columns
      = render 'requests/user_requests'

%div.row
  %div.twelve.columns
    %h2
      = @request.title
    %h3.subheader
      Requested by #{@request.user.email}
    %hr
    %p.panel
      = @request.description
  %hr
    - if user_signed_in?
      %form
        %div.row
          %label
            Respond to this question
          %input{:type => "text", :name => :title, :class => "twelve columns", :placeholder => "Your response title..."}
          %input{:type => "submit", :value => "Post Response", :class => "success button", :id => "post-response"}

%ul
  %li
    = link_to "Back to Questions", requests_path
  - if @request.user == current_user
    %li
      = link_to "Edit Question", edit_request_path(@request)
    %li
      = link_to "Delete Question", request_path(@request), :method => :delete, :confirm => "Are you sure you want to delete this question?"

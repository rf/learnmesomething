%ul.responses
  - @responses.each do |response|
    %li.response
      = button_to "+", upvote_request_response_path(response.request, response), :method => :post, class: "button"
      = button_to "-", downvote_request_response_path(response.request, response), :method => :post, class: "button"
      .row
        %p.votes.two.columns
          Score: #{response.total_votes}
        %p.url.seven.columns
          #{response.url}
        %p.three.columns
          - if response.user == current_user
            = link_to "Delete", request_response_path(@request, response), method: :delete, :confirm => "Are you sure you want to delete this response?" 
      .row
        %p.twelve.columns
          - if response.is_youtube?
            = "#{truncate(response.response, :length => 250, :omission => "...")}".html_safe
          - else
            = "#{truncate(response.response, :length => 250, :omission => "...")} #{link_to("(Full Article)", response.url)}".html_safe
    %hr
